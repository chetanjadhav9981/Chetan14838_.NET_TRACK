@model Registration
@{
    ViewData["Title"] = "RegistrationForm";
}

@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h1>Meeting Registration</h1>
<form asp-controller="Registration" asp-action="DisplayRegistrationData" method="post">
    <div asp-validation-summary="All" class="text text-danger"></div>
    <div class="form-group">
        <label for="Name">
            Name:
        </label><input type="text" asp-for="Name" placeholder="Enter Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />

    <div class="form-group">
        <label for="Email">
            Email :
        </label><input asp-for="Email" placeholder="Enter Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <br />


    <div class="form-group">
        <label for="Phone">
            Phone :
        </label>    <input asp-for="Phone " placeholder="Enter Phone" class="form-control" />
        <span asp-validation-for="Phone"></span>
    </div>
    <br />


    <div class="form-group">
        <label for="MeetingStatus">
        Meeting Status : @Html.DropDownListFor(m => m.Options,
        new SelectList(Enum.GetValues(typeof(MeetingStatus))),
        "MeetingStatus")
        </label>
    </div>
    <input type="submit" class="btn btn-info" value="Submit">
</form>




